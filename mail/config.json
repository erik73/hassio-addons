{
  "name": "Mailserver",
  "version": "0.80",
  "slug": "mailserver",
  "description": "Complete mail server solution for Home Assistant",
  "url": "https://github.com/erik73/hassio-addons2",
  "arch": ["amd64", "armv7"],
  "startup": "application",
  "init": false,
  "ingress": true,
  "boot": "auto",
  "map": ["ssl"],
  "services": ["mysql:need"],
  "host_network": true,
  "hassio_api": true,
  "hassio_role": "default",
  "options": {
    "domain_name": "mydomain.no-ip.com",
    "admin_user": "superadmin",
    "admin_password": null,
    "enable_antivirus": false
  },
  "schema": {
    "domain_name": "str",
    "admin_user": "str",
    "admin_password": "str",
    "enable_antivirus": "bool",
    "smtp_relayhost": "str?",
    "log_level": "list(trace|debug|info|notice|warning|error|fatal)?"
  },
  "image": "ehilton73/mailserver-{arch}"
}
