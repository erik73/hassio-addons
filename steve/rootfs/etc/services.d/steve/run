#!/usr/bin/with-contenv bashio
# ==============================================================================
# Home Assistant Add-on: SteVe
# Runs the SteVe OCPP Server
# ==============================================================================
export MAVEN_OPTS="-Xmx100m"

diff /usr/src/steve/pom.xml /data/pom.xml
if [ $? -ne 0 ]; then
    bashio::log.info "Starting Steve rebuild...."
    cd /usr/src/steve
    exec mvn package
    cp -f /usr/src/steve/pom.xml /data/
    cp -f /usr/src/steve/target/steve.jar /data/
fi
if bashio::fs.file_exists '/usr/src/steve/target/steve.jar'; then
    exec java -jar /data/steve.jar
fi